<BorderPane fx:id="root" prefHeight="700" prefWidth="1000" style="-fx-background-color: #DEEFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gps_g11.Controller.Historico.HistoricoController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="280.0">
                     <children>
                        <Label text="Tipo de Transação:">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <ChoiceBox fx:id="cbTransacao" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </ChoiceBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="280.0">
                     <children>
                        <Label text="Opções de Filtros Avançados:">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <ChoiceBox fx:id="cbFiltrosAvancados" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <ChoiceBox fx:id="cbEnvelopes" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <DatePicker fx:id="dpDate" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </DatePicker>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="280.0">
                     <children>
                        <Label text="Ordenar Transações">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <ChoiceBox fx:id="cbOrdenar" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" top="2.0" />
                           </VBox.margin>
                        </ChoiceBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="160.0">
                     <children>
                        <Button fx:id="btnRemoverFiltros" onAction="#onRemoverFiltros" mnemonicParsing="false" prefWidth="80.0" text="Remover Filtros" textAlignment="CENTER" wrapText="true">
                           <VBox.margin>
                              <Insets bottom="5.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="btnPesquisa" onAction="#onPesquisar" mnemonicParsing="false" prefWidth="80.0" text="Pesquisar">
                           <VBox.margin>
                              <Insets bottom="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="500.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="tcMontante" prefWidth="120.0" text="Montante" />
                  <TableColumn fx:id="tfData" prefWidth="130.0" text="Data" />
                  <TableColumn fx:id="tfEnvelope" prefWidth="230.0" text="Envelope" />
                  <TableColumn fx:id="tfDescricao" prefWidth="438.0" text="Descrição" />
              </columns>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" top="40.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
