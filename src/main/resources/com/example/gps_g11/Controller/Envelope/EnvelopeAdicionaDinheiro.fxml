                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ChoiceBox>
                  <Label fx:id="lblError" alignment="CENTER" prefHeight="20.0" prefWidth="250.0" text="Mensagem de Erro" textFill="#ff676a">
