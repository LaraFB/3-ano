<BorderPane fx:id="root" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: DEEFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gps_g11.Controller.BudgetPaneController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" styleClass="vBoxItem" stylesheets="@../Style.css" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="400.0" prefWidth="200.0" spacing="10.0">
               <children>
                   <PieChart fx:id="pieChartBudget" />
                   <PieChart fx:id="pieChartBolsa" title="Bolsa Restante" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="280.0" prefWidth="200.0" spacing="15.0">
                <children>
                    <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="170">
                        <HBox fx:id="dynamicHBox" spacing="15">
                            <!-- Botões dinâmicos serão adicionados dinamicamente aqui -->
                        </HBox>
                    </ScrollPane>
                    <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="150.0" prefWidth="181.0" style="-fx-background-color: transparent;" text="Guarda&#10;Dinheiro">
                        <graphic>
                            <ImageView fitHeight="85.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../../../image/save_money_env_icon.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                            <Font name="Times New Roman" size="14.0" />
                        </font>
                    </Button>
                </children>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="70.0" left="70.0" right="70.0" top="25.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Button mnemonicParsing="false" onAction="#onAddBudget" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: #2370ff;" styleClass="btn" stylesheets="@../Style.css" text="Add Budget" textFill="#545454" BorderPane.alignment="TOP_RIGHT">
          <font>
              <Font name="Times New Roman" size="16.0" />
          </font>
          <BorderPane.margin>
            <Insets right="20.0" top="20.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
